<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="main" alignment="center" hgap="10"
          stylesheets="@../css/log_in.css" vgap="10"
          xmlns="http://javafx.com/javafx/17.0.12"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="map.controller.RegisterController"
          prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="label" alignment="center" prefHeight="35.0" prefWidth="216.0" text="Register" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Username:" GridPane.rowIndex="1" />
    <TextField fx:id="usernameField" promptText="Enter Username" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="First Name:" GridPane.rowIndex="2" />
    <TextField fx:id="firstnameField" promptText="Enter First Name" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Last Name:" GridPane.rowIndex="3" />
    <TextField fx:id="lastnameField" promptText="Enter Last Name" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Password:" GridPane.rowIndex="4" />
    <PasswordField fx:id="passwordField" promptText="Enter Password" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label fx:id="errorLabel" alignment="center" text="Invalid username or password" visible="false" GridPane.columnSpan="2" GridPane.rowIndex="5" />

    <Button fx:id="button" alignment="center" onAction="#handleRegister" prefHeight="30.0" prefWidth="215.0" text="Register" GridPane.columnSpan="2" GridPane.rowIndex="6" />

</GridPane>
